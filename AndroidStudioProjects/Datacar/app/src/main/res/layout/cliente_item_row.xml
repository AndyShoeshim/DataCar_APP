<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:id="@+id/rv_item_cliente_card"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="6dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/rv_item_cliente_nome_title"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="@string/name_cliente"
        android:textColor="@color/textinAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_margin="5dp"
        android:id="@+id/rv_item_cliente_cognome_title"
        android:layout_toEndOf="@id/rv_item_cliente_nome_title"
        android:textStyle="bold"
        android:text="@string/cognome_cliente"
        android:textColor="@color/textinAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/rv_item_cliente_num_targhe_title"
        android:text="@string/num_targhe_cliente"
        android:textStyle="bold"
        android:textColor="@color/textinAccent"
        android:layout_toEndOf="@id/rv_item_cliente_cognome_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageButton
        android:id="@+id/rv_item_cliente_modifica"
        android:layout_marginLeft="5dp"
        android:background="@drawable/ic_edit_white_24dp"
        android:layout_toEndOf="@id/rv_item_cliente_num_targhe_title"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/area_clienti"/>


    <ImageButton
        android:id="@+id/rv_item_cliente_elimina"
        android:layout_marginLeft="5dp"
        android:background="@drawable/ic_delete_white_24dp"
        android:layout_toEndOf="@id/rv_item_cliente_modifica"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/area_clienti"/>


    <ImageButton
        android:id="@+id/rv_item_cliente_add_auto"
        android:layout_marginLeft="5dp"
        android:background="@drawable/ic_add_box_white_24dp"
        android:layout_toEndOf="@id/rv_item_cliente_elimina"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/area_clienti"
        />


    <TextView
        android:id="@+id/rv_item_cliente_nome"
        android:textColor="@color/textinAccent"
        android:layout_below="@id/rv_item_cliente_nome_title"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/rv_item_cliente_cognome"
        android:textColor="@color/textinAccent"
        android:layout_below="@id/rv_item_cliente_cognome_title"
        android:layout_toEndOf="@id/rv_item_cliente_nome"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/rv_item_cliente_num_targhe"
        android:padding="5dp"
        android:textColor="@color/textinAccent"
        android:layout_toEndOf="@id/rv_item_cliente_cognome"
        android:layout_below="@id/rv_item_cliente_num_targhe_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    </RelativeLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>